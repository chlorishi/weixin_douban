/* 搜索*/
@import '../templates/stars-template/stars-template.wxss';

.header-search {
  padding: 20rpx 30rpx;
  background-color: #42bd56;
}

.search-main {
  padding: 6rpx;
  text-align: center;
  color: #ccc;
  font-size: 32rpx;
  background-color: white;
  border-radius: 10rpx;
}

/* end */

/* 内容区 */
.list-header {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
}

.header-content {
  color: #42bd56;
}

.header-content text {
  font-size: 24rpx;
  font-weight: bold;
}

.list-img {
  display: flex;
}

.img-item {
  width: 230rpx;
  padding: 20rpx;
}

.item-logo {
  border-radius: 10rpx;
  width: 230rpx;
  height: 260rpx;
}

.item-name {
  text-align: center;
  font-size: 28rpx;
}

.img-stars {
  display: flex;
  justify-content: space-between;
}


.average {
  text-align: center;
  font-size: 32rpx;
  color: #999;
  line-height: 30rpx;
}

/* end */